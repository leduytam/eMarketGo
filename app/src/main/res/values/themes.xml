<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EMarketGo" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/circular_std</item>
    </style>

    <style name="Theme.SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="colorPrimaryDark">@color/primary</item>
    </style>

    <style name="Toolbar.SmallTitleText" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="ImageViewCircular" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="SearchView.SmallText" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/gray_700</item>
        <item name="colorControlActivated">@color/dusk_yellow</item>
    </style>

    <style name="SearchView.Background" parent="Widget.Material3.SearchView">
        <item name="background">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
    </style>
</resources>